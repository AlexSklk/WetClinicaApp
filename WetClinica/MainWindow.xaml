<Window x:Class="WetClinica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ветеринарная клиника" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название питомца:"/>
            <TextBox x:Name="PetNameTextBox" Width="200"/>

            <TextBlock Text="Имя владельца:"/>
            <TextBox x:Name="OwnerNameTextBox" Width="200"/>

            <TextBlock Text="Вид животного:"/>
            <TextBox x:Name="SpeciesTextBox" Width="200"/>

            <Button Content="Добавить питомца" Click="AddPetButton_Click" Margin="5"/>

            <ListBox x:Name="PetsListBox" Height="100"/>

            <Button Content="Посмотреть услуги" Click="OpenServicesWindow_Click" Margin="5"/>
            <Button Content="Записать на услугу" Click="OpenBookingWindow_Click" Margin="5"/>
            <Button Content="Просмотр записей" Click="OpenAppointmentsWindow_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
